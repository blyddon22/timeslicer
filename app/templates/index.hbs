<div class="grid grid-cols-2 gap-4">
  <div class="p-4">
    <h1 class="text-5xl">Timeslicer</h1>
    <div class="pt-8">
      {{#if this.showEdit}}
        <SlicerForm @slice={{this.sliceToEdit}} @showForm={{true}}/>
      {{else}}
        <SlicerForm @slice={{this.sliceToEdit}} @showForm={{false}}/>
      {{/if}}
    </div>
  </div>

  <SlicerList @slices={{this.model}} @edit={{this.setEditSlice}}/>
</div>
